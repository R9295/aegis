          <script src="static/js/MediaStreamRecorder.min.js"></script>
  <script>
    //setting up drawing pad width.
if (screen.width <= 570){
  var width = screen.width -30
}
var height = screen.height/3
var pad = atrament('#drawing_pad',width,height,'black');
pad.smoothing = false;
console.log(width)
console.log(height)

$("#drawing_div").hide()
$("#input_div").hide()
function note_type(){
  var notetype = $(".custom-select").val();
  if (notetype === 'text'){
    $("#drawing_div").hide()
    $("#input_div").show()
  }
  if (notetype === 'handwritten'){
    $("#input_div").hide()
    $("#drawing_div").show()
  }
  if (notetype === 'audio'){
    $("#input_div").hide()
    $("#drawing_div").hide()
    $("#audio_div").show()


    var mediaConstraints = {
    audio: true
    };
    function onMediaError(e) {
    console.error('media error', e);
}
    navigator.getUserMedia(mediaConstraints, onMediaSuccess, onMediaError);
    function onMediaSuccess(stream) {
    var mediaRecorder = new MediaStreamRecorder(stream);
    mediaRecorder.mimeType = 'audio/wav'; // check this line for audio/wav
        
    
    $("#start_record").on('click', function(){
mediaRecorder.start(3000);
    })
    
    $("#stop_record").on('click',function(){
      mediaRecorder.stop()
     var asd = mediaRecorder.save()
     console.log(asd)
    })
  

    
}














  

    }
  if (notetype === 'both'){
    $("#input_div").show()
      $("#drawing_div").show()
    }
}   

var simplemde = new SimpleMDE({
  element: document.getElementById("input"),
  spellChecker:false
});
 
//Gathering form data,encrypting and posting
function post_data(){
  //Note Type:
  var note_type = $(".custom-select").val();
    
    //If text
  if (note_type === 'text'){
      
      var data ={}
      data['note'] = simplemde.value()
      data['title'] = $("#name").val()
      data['type'] = 'text'
      data['tag'] = 'tag'
      
        $.ajax({
        type: "POST",
        url: "/add_note",
        contentType: 'application/json',
        data: JSON.stringify(data),
        dataType: 'json',
        success: function success(data){
          console.log(data.response)


  }
    

  });
}

  if (note_type === 'audio'){
